<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :desktop_client, "I use an e-mail desktop client" %>
    <%= f.check_box :desktop_client %>
  </div>
  <div>
    <%= f.label :contact_intensity, "I'd like to get in touch with" %>
    <%= f.text_field :contact_intensity, :size => 1 %> contacts per week.
  </div>
  <div>
    <%= f.label :signature, "Email Signature (optional)" %><br />
    <%= f.text_field :signature %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br />

<p>Want to change your password or delete your account? <%= link_to "Advanced Changes", advanced_changes_path %></p>
