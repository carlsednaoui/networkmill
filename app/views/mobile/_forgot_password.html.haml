= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => "forgot-password-form" }) do |f|
	= devise_error_messages!
	= f.email_field :email, placeholder: "email", class: 'email-field'
	= f.submit "Reset password &raquo;".html_safe, :class => "reset-submit"