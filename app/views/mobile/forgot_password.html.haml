%h1#logo
  NetworkMill
  
#reset-password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => "forgot-password-form" }, :remote => true) do |f|
    = devise_error_messages!
    = f.email_field :email, placeholder: "email", class: 'email-field'
    = f.submit "Reset password &raquo;".html_safe, :class => "signin-submit reset-password"
  
#more-actions
  = link_to "cancel", root_url