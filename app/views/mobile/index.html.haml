%h1#logo
  MOBILE

#signin
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true) do |f|
    = f.email_field :email, placeholder: 'your@email.com', class: 'email-field'
    = f.password_field :password, placeholder: 'secret password', class: 'password-field'

    / - if devise_mapping.rememberable?
    /   = f.check_box :remember_me
    /   = f.label :remember_me

    = f.submit "hit it &raquo;".html_safe, class: 'signin-submit'


%p
  #more-actions
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = link_to "forgot password?", forgot_password_path

    = link_to "Sign Up", root_url(:subdomain => false)