body
  background: url('/images/bg.jpg') no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  font: 14px "Helvetica Neue", Helvetica, Arial, sans-serif
  padding: 50px

  &.list
    background: #fff
    color: #444

a
  color: #00B7FF

h1
  text-indent: -9999px
  width: 124px
  height: 21px
  margin: 0 auto
  background: url('/images/logo.png')
  display: none
  -webkit-transition: all .5s ease
  position: absolute
  text-align: center
  z-index: 10

form
  opacity: 0
  display: none
  position: absolute
  -webkit-transition: all .5s ease

  input
    font-size: 14px
    padding: 9px 20px
    border: 3px solid rgba(0,0,0,.3)
    text-align: center
    border-radius: 4px
    background-clip: padding-box
    width: 230px
    -webkit-text-smoothing: antialiased
    color: #4E4E4E

    &:focus
      outline: 0

  .thanks
    width: 72px
    height: 28px
    background: url('/images/thanks.png')
    position: absolute
    top: 8px
    right: -56px
    display: none